extends layout 
block style 
    link(rel='stylesheet' href='style2.css')
block content

  body 
    .container
      header
        h1#title Register user
      #form-wrapper
        form#register-form(method="POST" ,action='/register/user')
          .form-row
            .col.form-group
              input.form-control(placeholder='First name' name='firstname')
            .col.form-group
              input.form-control(placeholder='Last name' name='lastname')
            .col.form-group
              input.form-control(placeholder='User name' name='username')
          .form-row
            .col.form-group.align
              select.form-control(name='gender')
                option(value='fulltime')  Male
                option(value='parttime') Female
            .col.form-group
              input.form-control(type='date' name='dob')
          .form-row
            .col.form-group
              input.form-control(placeholder='NIN' name='nin')
            .col.form-group
              input.form-control(placeholder='Phone number' name='phonenumber')
            .col.form-group.align
              select.form-control(name='employeetype')
                option(value='fulltime')  Full time
                option(value='parttime') Part time
            .form-col
              .col.form-group
                register
                  input.btn.btn-primary.btn-block(type="submit")
                
      p.copyright
        small
          u This form has been Comissioned by the government of Uganda
      script(src='register.js')
